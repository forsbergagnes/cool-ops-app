{
  "extends": "@getcronit/pylon/tsconfig.pylon.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
  },
  "include": [
    "pylon.d.ts",
    "apps/**/*.ts"
  ]
}