datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  email String    @unique
  name  String?
}

model Mail {
  id          String @id @map("_id")
  sender      String
  recipients  String[]
  topic       String
  date        DateTime
}